<main class="row mx-2 justify-content-center">
    <div class="col-12 text-center h2 mt-2">Create New Post</div>
    <div class="card mt-4 custom-box-shadow px-0 col-11 border-dark border-2">
        <form class="newPostForm row justify-content-center text-center">
        <div class="my-3 col-10">
            <label for="editTitle" class="form-label h4">Title</label>
            <input type="text" class="form-control" id="newPostTitle" aria-describedby="editTitle">
        </div>
        <div class="mb-3 col-10">
            <label for="editPostBody" class="form-label h4">Body</label>
            <textarea class="form-control post-textarea" id="newPostBody"></textarea>
        </div>

        <div class="col-10 mb-3 row justify-content-center">
            <button type="submit" class="btn btn-md btn-warning p-1 mx-3 rounded col-6">Post</button>
        </div>
    </form>
    </div>

    <div class="col-12 text-center h2 mt-2">My Posts</div>

    {{#each posts as |post|}}
    <div class="card mt-4 custom-box-shadow px-0 col-11 border-dark border-2">
        <a class="link-light text-decoration-none" href="/dashboard/edit/{{post.id}}">
            <div class="card-header d-flex bg-dark" id="post_title">
                <span class="h4 me-auto">{{post.title}}</span> <span >{{format_date post.created_at}}</span>
            </div>
        </a>

    </div>

    {{/each}}
</main>

<script src="/javascript/new-post.js"></script>
