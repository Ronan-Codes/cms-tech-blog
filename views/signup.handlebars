

<div class="container-fluid">
    <div class="row justify-content-center">
        <main class="login-wrapper col-8 justify-content-center text-center mt-5 pt-3 bg-warning rounded">
            <div class="col-12">
                <h2 class="">
                    Login
                </h2>
            </div>

            <div class="form-wrapper col-12 mt-3  row justify-content-center">
                <form class="login-form col-4">
                    <div class="form-group col-12">
                        <input type="email" class="form-control text-dark" id="login-email-input"
                            aria-describedby="emailHelp" placeholder="Enter email">
                    </div>
                    <div class="form-group col-12">
                        <input type="password" class="form-control" id="login-password-input" placeholder="Password">
                    </div>

                    <div class="pt-2">
                        <button type="submit" class="btn-md btn-light p-1 rounded">Submit</button>
                    </div>
                </form>
            </div>

            <div class="form-wrapper col-12 mt-4 pb-4 row justify-content-center">
                <form class="signup-form col-4">
                    <div class="form-group col-12">
                        <input type="text" class="form-control text-dark" id="signup-username-input"
                            aria-describedby="emailHelp" placeholder="Enter username">
                    </div>
                    <div class="form-group col-12">
                        <input type="email" class="form-control text-dark" id="signup-email-input"
                            aria-describedby="emailHelp" placeholder="Enter email">
                    </div>
                    <div class="form-group col-12">
                        <input type="password" class="form-control" id="signup-password-input" placeholder="Password">
                    </div>
                    <div class="">
                        <button type="submit" class="btn-md btn-light p-1 rounded">Signup</button>
                    </div>
                </form>
            </div>
        </main>
    </div>
</div>
